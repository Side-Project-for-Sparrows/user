<configuration>

    <property name="LOG_HOME" value="logs" />

    <!-- 공통 패턴 -->
    <property name="STDOUT_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- REST API 요청 로그 -->
    <appender name="API_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/api.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder><pattern>${STDOUT_PATTERN}</pattern></encoder>
    </appender>

    <!-- FEIGN 로그 -->
    <appender name="FEIGN_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/feign.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/feign.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder><pattern>${STDOUT_PATTERN}</pattern></encoder>
    </appender>

    <!-- Kafka 관련 로그 -->
    <appender name="KAFKA_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/kafka.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/kafka.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder><pattern>${STDOUT_PATTERN}</pattern></encoder>
    </appender>

    <!-- DB 관련 로그 -->
    <appender name="DB_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/db.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/db.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder><pattern>${STDOUT_PATTERN}</pattern></encoder>
    </appender>

    <!-- Logger 설정 -->
    <logger name="log.api" level="INFO" additivity="false">
        <appender-ref ref="API_LOG" />
    </logger>

    <logger name="log.feign" level="INFO" additivity="false">
        <appender-ref ref="FEIGN_LOG" />
    </logger>

    <logger name="log.kafka" level="INFO" additivity="false">
        <appender-ref ref="KAFKA_LOG" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="log.db" level="INFO" additivity="false">
        <appender-ref ref="DB_LOG" />
    </logger>

    <!-- 콘솔 로그(optional) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${STDOUT_PATTERN}</pattern></encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
